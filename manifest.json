{
	"manifest_version": 2,
	"name": "Zendesk Tookit",
	"description": "",
	"version": "0.0.1",
	"background": {
		"scripts": [
			"dependencies/string.js",
			"core/constants.js",
			"dependencies/chromeAsync.js",
			"core/notificationHelper.js",
			"dependencies/zendesk.js",
			"core/ticketHelper.js",
			"background/shared.js",
			"background/onInstalled.js",
			"background/onDeterminingFilename.js",
			"background/onAlarm.js",
			"background/onMessage.js",
			"background/exceptionHandler.js"
		],
		"persistence": false
	},
	"browser_action": {
		"default_title": "Zendesk Tookit",
		"default_popup": "browserAction/browserAction.html"
	},
	"options_page": "optionsPage/optionsPage.html",
	"content_scripts": [
		{
			"matches": [
				"https://*.zendesk.com/*"
			],
			"js": [
				"core/constants.js",
				"dependencies/chromeAsync.js",
				"contentScript.js"
			]
		}
	],
	"permissions": [
		"downloads",
		"storage",
		"contextMenus",
		"tabs",
		"activeTab",
		"alarms",
		"notifications"
	],
	"content_security_policy": "script-src 'self'; object-src 'self';"
}